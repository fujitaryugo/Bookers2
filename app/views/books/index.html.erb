<div class="body">
  <%= render 'layouts/error_messages', model: @book %>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :size => "100x100", fallback: "no_image.jpg"%>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<%= link_to edit_user_path(@user), class: "col-xs-12 btn btn-default" do %>
				<span class="glyphicon glyphicon-wrench" ></span>
				<% end %>
			</div>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
				<div class="field row">
					<label>Title</label>
					 <div class="col-xs-12"><%= f.text_field :title %></div>
				</div>
				<div class="field row">
					<label>Opinion</label>
					 <div class="col-xs-12"><%= f.text_area :body %></div>
				</div>
				<div class="actions row">
					  <%= f.submit "Create Book",class: "btn btn-primary col-xs-12" %>
				</div>
			<% end %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
         <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
          	<tr>
          		<td><%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :size => "40x40", fallback: "no_image.jpg"%><br />
                <% end %>
          		</td>
          		<td><%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
          		<td><%= book.body %></td>
          	</tr>
            <% end %>
          </tbody>
         </table>
		</div>
	</div>
</div>
</div>
