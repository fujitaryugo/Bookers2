<%= form_for(@book) do |f| %>

<h1>Editing Book</h1>

    <h4> Title</h4>
    <%= f.text_field :title %>

    <h4> Body</h4>
    <%= f.text_area :body %>

    <div><%= f.submit 'Update Book' %></div>
<% end %>
    <%= link_to "Show", book_path(@book),class: "show_#{@book.id}" %>
    <%= link_to "back", books_path(@book),class: "back" %>

