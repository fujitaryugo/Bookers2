<div class='body'> 
		<%= render 'layouts/error_messages', model: @book %>
	<div class='row'>
	<div class='container'>
		<div class='col-md-6 col-md-offset-3'>
          <h1>Editing Book</h1>
 		  <%= form_for(@book) do |f| %>
		     <div class="field row ">
			     <label>Title</label>
			     <div class="col-xs-12 col-xs-offset-1"><%= f.text_field :title %></div>
		     </div>
			 <div class="field row">
			     <label>Opinion</label>
			     <div class="col-xs-12 col-xs-offset-1"><%= f.text_area :body %></div>
			 </div>
		　　　<div class="actions row">
				 <%= f.submit "Update Book",class: "btn btn-primary" %>
			 </div>
		  <% end %>
		</div>
			    <div class='col-md-3'></div>
	</div>
</div>
</div>